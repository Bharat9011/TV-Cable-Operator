                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/arrow_forward" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
